#include <iostream>
#include <iomanip>
#include <vector>
#include <string>

using std::cout;
using std::cin;
using std::endl;
using std::string;
using std::vector;
using std::setw;
using std::left;
using std::right;

struct Studentas{
    string var;
    string pav;
    vector <int> paz;
    int egz;
    double gal;
    };

Studentas Stud_iv();

int main(){

    vector <Studentas> Grupe;
    cout<<"Kiek studentu grupeje? ";
    int m;
    cin>>m;

    for(auto z=0; z<m; z++){
        Grupe.push_back(Stud_iv());
    }
    cout<<"Stundento info:"<<endl;

    for(auto Past:Grupe){
    cout<<setw(10)<<left<<Past.var<<"|"<<setw(15)<<right<<Past.pav<<"|";
    for(auto& i: Past.paz) cout<<setw(3)<<i<<"|";
    cout<<setw(5)<<Past.egz<<"|"<<setw(10)<<Past.gal<<endl;
    }
    }

    Studentas Stud_iv(){
        int n, laik_paz, sum=0;

        Studentas Pirmas;
        cout<<"Ivesk studento duomenis"<<endl;
        cout<<"Vardas: "; cin>>Pirmas.var;
        cout<<"Pavarde: "; cin>>Pirmas.pav;
        cout<<"Kiek pazymiu turi studentas: "<<Pirmas.var<<" "<<Pirmas.pav<<": ";cin>>n;
        for(int i=0; i<n; i++){
            cout<<i+1<<": "; cin>>laik_paz;
            Pirmas.paz.push_back(laik_paz); // prideda kintamaji i vektoriu kiek reikia
            sum+=laik_paz; // sum+=Pirmas.paz[i];
            }
        cout<<"Studento egzamino pazimys: "; cin>>Pirmas.egz;
        Pirmas.gal=double(sum)/double(n)*0.4+0.6*Pirmas.egz;

        return Pirmas;
    }
